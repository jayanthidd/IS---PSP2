<Window x:Class="WpfAppEventHandling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppEventHandling"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <StackPanel Margin="0,10,45,52">
        <ComboBox x:Name="gender">
            <ComboBoxItem>Male</ComboBoxItem>
            <ComboBoxItem>Female</ComboBoxItem>
            <ComboBoxItem>Others</ComboBoxItem>
        </ComboBox>
        
        <TextBox x:Name="nameofPerson" Text="Please Enter your Name"></TextBox>
        <Button x:Name="greetperson" Click="greetingClick">Greeting</Button>
        <Label x:Name="greeting"></Label>
    </StackPanel>
</Window>
