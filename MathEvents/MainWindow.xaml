<Window x:Class="MathEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathEvents"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel >
            <TextBox  x:Name="num1" Text="Enter the First Number"></TextBox>
            <TextBox  x:Name="num2" Text="Enter the Second Number"></TextBox>
        <ComboBox x:Name="operation">
            <ComboBoxItem>Add</ComboBoxItem>
            <ComboBoxItem>Subtract</ComboBoxItem>
        </ComboBox>
        <Button Click="onCalculation">Calculate Result</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal"></StackPanel>
        <Label x:Name="result"> </Label>
    </StackPanel>
    
</Window>
